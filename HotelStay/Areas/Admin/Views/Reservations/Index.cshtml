@model HotelStay.Models.ViewModels.ReservationViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="get">
    <br /><br />
    <h2 class="text-info">Reservation List</h2>
    <br />

    <div style="height:100%; background-color:aliceblue;" class="container">
        @* //WE will add criteria*@
        <div class="col-md-12">
            <div class="row" style="padding-top:10px;">
                <div class="col-sm-2">
                    Customer Name
                </div>
                <div class="col-sm-3">
                    @Html.Editor("searchName", new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="col-2">

                </div>

                <div class="col-sm-2">
                    Email
                </div>
                <div class="col-sm-3">
                    @Html.Editor("searchEmail", new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="row" style="padding-top:10px;">
                <div class="col-sm-2">
                    Phone Number
                </div>
                <div class="col-sm-3">
                    @Html.Editor("searchPhone", new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="col-2">

                </div>

                <div class="col-sm-2">
                    Reservation Date
                </div>
                <div class="col-sm-3">
                    @Html.Editor("searchDate", new { htmlAttributes = new { @class = "form-control", @id = "datepicker" } })
                </div>
            </div>
            <div style="display:flex;justify-content:flex-end;" class="col-4">
                <button type="submit" name="submit" value="Search" class="btn btn-primary mb-3 mt-3">
                    <i class="fas fa-search"></i> Search
                </button>
            </div>

        </div>
    </div>

    <br /><br />

    <div>
        <table class="table table-striped border table-responsive">
            <tr class="table-info">
                <th>
                    @Html.DisplayNameFor(m => m.Reservations.FirstOrDefault().SalesPerson.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Reservations.FirstOrDefault().ReservationDate)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Reservations.FirstOrDefault().CustomerName)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Reservations.FirstOrDefault().CustomerEmail)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Reservations.FirstOrDefault().isConfirmed)
                </th>
                <th>
                </th>
                <th></th>
                <th></th>
                <th></th>
            </tr>

            @foreach (var item in Model.Reservations)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(m => item.SalesPerson.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.ReservationDate)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.CustomerName)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.CustomerEmail)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.isConfirmed)
                    </td>
                    <td>
                        <partial name="_TableButtonPartial" model="item.Id" />
                    </td>
                    <td></td>
                    <td></td>
                </tr>
            }
        </table>
    </div>
</form>

@section Scripts{
    <script>
        $(function () {
            $("#datepicker").datepicker({
                minDate: +1, maxDate: "+3M"
            });
        });
    </script>
}